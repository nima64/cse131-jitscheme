(fun (isodd n)
  (if (< (cast Num n) (cast Num 0))
      (isodd (- (cast Num 0) (cast Num n)))
      (if (= (cast Num n) (cast Num 0))
          false
          (iseven (cast Num (sub1 (cast Num n))))
      )
  )
)

(fun (iseven n)
  (if (= (cast Num n) (cast Num 0))
      true
      (isodd (cast Num (sub1 (cast Num n))))
  )
)

